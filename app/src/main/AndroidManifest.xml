<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnalphabet.alphamaster"
    android:versionCode="8"
    android:versionName="1.5">


    <application
        android:name="com.learnalphabet.alphamaster.GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Widget.AppCompat.ActionBar">

        <activity
            android:name="com.learnalphabet.alphamaster.MainSplash"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.learnalphabet.alphamaster.MainActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.learnalphabet.alphamaster.test.Level1Activity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.learnalphabet.alphamaster.test.Level2Activity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".learn.LearnActivity"
            android:label="LEARN"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>
